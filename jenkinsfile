pipeline {
    agent any

    stages {
        stage('Clone SCM') {
            steps {
                echo 'cloning code from Github'
		git branch: 'main', url: 'https://github.com/ajayveesam/jenkins_project.git'
            }
        }
        stage('Build Artifact') {
            steps {
                echo 'Building project with maven'
		sh 'mvn clean install'
            }
        }
        stage('Deploy Tomcat') {
            steps {
                echo 'Deploying artifact to tomcat webbrowser'
		deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://ec2-44-202-31-27.compute-1.amazonaws.com:8091/')], contextPath: 'facebook-app', war: '**/*.war'
            }
        }
    }
}
